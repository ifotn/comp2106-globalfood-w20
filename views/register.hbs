<h1>Register</h1>

<form method="post">
    <fieldset class="form-group">
        <label for="username" class="col-sm-2 control-label">Username: *</label>
        <input name="username" id="username" required
               placeholder="email@email.com" />
    </fieldset>
    <fieldset class="form-group">
        <label for="password" class="col-sm-2 control-label">Password: *</label>
        <input name="password" id="password" type="password" required
               pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"  />
    </fieldset>
    <fieldset class="form-group">
        <label for="confirm" class="col-sm-2 control-label">Confirm: *</label>
        <input name="confirm" id="confirm" type="password" required onkeyup="return comparePasswords()"
               pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" />
        <span id="pwMsg"></span>
    </fieldset>
    <fieldset class="form-group">
        <button class="btn btn-info offset-2" onclick="return comparePasswords()">Register</button><a href="/google"><img src="/images/google.png" alt="Google Sign-In" /></a>
        <hr />
        Already have an account?  <a href="/login" title="Login">Login</a>
        </div>
    </fieldset>
</form>
